{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/songs/search",
      "dest": "/api/songs/search.js"
    },
    {
      "src": "/api/songs/([^/]+)/mark-sung",
      "dest": "/api/songs/[id]/mark-sung.js?id=$1"
    },
    {
      "src": "/api/songs/([^/]+)",
      "dest": "/api/songs/[id].js?id=$1"
    },
    {
      "src": "/api/songs",
      "dest": "/api/songs/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/public/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1.js"
    }
  ]
}